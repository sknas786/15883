<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView

        android:id="@+id/cardview1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        android:background="#55000000"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="5dp"
        card_view:cardMaxElevation="5dp"
        card_view:contentPadding="5dp">

        <com.github.sundeepk.compactcalendarview.CompactCalendarView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/compactcalendar_view"
            android:layout_width="fill_parent"

            android:layout_height="220dp"
            android:layout_marginTop="80dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="visible"
            app:compactCalendarOtherMonthDaysTextColor="#1fd432"
            app:compactCalendarBackgroundColor="#fff"
            app:compactCalendarCurrentDayBackgroundColor="#55000000"
            app:compactCalendarCurrentDayIndicatorStyle="no_fill_large_indicator"
            app:compactCalendarCurrentSelectedDayBackgroundColor="#1fd474"
            app:compactCalendarCurrentSelectedDayIndicatorStyle="no_fill_large_indicator"
            app:compactCalendarMultiEventIndicatorColor="#ebff36"
            app:compactCalendarTargetHeight="250dp"
            app:compactCalendarTextColor="#000000"

            app:compactCalendarTextSize="12sp"


            />

        <!--<Button-->
        <!--android:id="@+id/button7"-->
        <!--android:layout_width="300dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textColor="#00bfa5"-->
        <!--android:background="#fff"-->
        <!--android:text="Display Calendar"-->
        <!--android:visibility="visible"-->
        <!--android:layout_below="@+id/compactcalendar_view"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="38dp" />-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#00bfa5">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#fff"
                android:textSize="25dp" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/border_dot"
        android:layout_marginTop="68dp"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/cardview1"
        android:layout_toStartOf="@+id/textView14"
        android:layout_marginEnd="29dp"></RelativeLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assignment deposit"
        android:layout_marginEnd="8dp"
        android:layout_alignBottom="@+id/relativeLayout"
        android:layout_toStartOf="@+id/relativeLayout2" />

    <RelativeLayout
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/border_dot_blue"
        android:id="@+id/relativeLayout2"
        android:layout_marginEnd="128dp"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignEnd="@+id/textView15"></RelativeLayout>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doubt clear class"
        android:layout_marginEnd="20dp"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignEnd="@+id/cardview1" />

    <RelativeLayout
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/border_dot_green"
        android:id="@+id/relativeLayout3"
        android:layout_below="@+id/relativeLayout2"
        android:layout_toStartOf="@+id/relativeLayout2"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="51dp"></RelativeLayout>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Others"
        android:layout_alignTop="@+id/relativeLayout3"
        android:layout_alignStart="@+id/relativeLayout2" />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:background="#00bfa5"
        android:text="All Events"
        android:textSize="15dp"
        android:fontFamily="monospace"
        android:onClick="eventlist"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

