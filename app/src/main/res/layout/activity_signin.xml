<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context="shiksha.teambitcoders.com.shiksha.SigninActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editTextEmail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            app:met_singleLineEllipsis="true"
            android:textColorHint="#fff"
            app:met_baseColor="#FFF"
            app:met_clearButton="true"
            app:met_primaryColor="#FFF"

            app:met_iconLeft="@drawable/picon"
            app:met_floatingLabel="highlight"
            android:padding="0dp"
            app:met_floatingLabelTextColor="#ffffff"
            android:layout_alignBottom="@+id/editTextPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="82dp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editTextPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            app:met_primaryColor="#FFF"
            app:met_singleLineEllipsis="true"
            app:met_clearButton="true"
            android:textColorHint="#fff"
            app:met_baseColor="#FFF"
            app:met_iconLeft="@drawable/uicon"
            app:met_floatingLabel="highlight"
            android:padding="0dp"
            app:met_floatingLabelTextColor="#fff"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/editTextEmail" />

        <Button
            android:text="Login"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogin"
            android:textColor="#fd0051"
            android:background="@drawable/trans_bg_fill"

            android:layout_below="@+id/editTextPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp" />


        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:layout_below="@+id/editTextEmail"
            android:layout_centerHorizontal="true" />

        <!--<Button-->
            <!--android:text="Signup"-->
            <!--android:layout_width="180dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/btnSignup"-->
            <!--android:textColor="#FFF"-->
            <!--android:background="@drawable/trans_bg"-->
            <!--android:onClick="testt"-->
            <!--android:layout_below="@+id/btnLogin"-->
            <!--android:layout_alignLeft="@+id/btnLogin"-->
            <!--android:layout_alignStart="@+id/btnLogin"-->
            <!--android:layout_marginTop="42dp" />-->

        <TextView
            android:text="@string/signup_text"
            android:textSize="15dp"
            android:clickable="true"
            android:onClick="signupp"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:id="@+id/textView3" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="39dp"
        app:srcCompat="@drawable/degree"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
